{
    "name": "julien-lin/react-bundle-symfony",
    "type": "symfony-bundle",
    "description": "Bundle Symfony pour intégrer React avec Vite, remplaçant Stimulus",
    "keywords": [
        "symfony",
        "bundle",
        "react",
        "vite",
        "twig"
    ],
    "license": "MIT",
    "version": "2.1.0",
    "authors": [
        {
            "name": "Julien Lin",
            "email": "julien.linard.dev@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "symfony/framework-bundle": "^7.0|^8.0",
        "symfony/twig-bundle": "^7.0|^8.0",
        "symfony/console": "^7.0|^8.0",
        "symfony/process": "^7.0|^8.0",
        "twig/twig": "^3.0|^4.0",
        "symfony/yaml": "^7.0|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "squizlabs/php_codesniffer": "^4.0",
        "phpstan/phpstan": "^2.1",
        "phpunit/php-code-coverage": "^12.5"
    },
    "autoload": {
        "psr-4": {
            "ReactBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ReactBundle\\Tests\\": "tests/"
        }
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.0|8.0"
        }
    },
    "support": {
        "issues": "https://github.com/julien-lin/reactBundleSymfony/issues",
        "source": "https://github.com/julien-lin/reactBundleSymfony",
        "funding": "https://github.com/sponsors/julien-lin"
    },
    "scripts": {
        "post-install-cmd": [
            "ReactBundle\\Composer\\ScriptHandler::installAssets",
            "ReactBundle\\Composer\\ScriptHandler::generateViteConfig"
        ],
        "post-update-cmd": [
            "ReactBundle\\Composer\\ScriptHandler::installAssets"
        ]
    }
}